<Window x:Class="CooperationApp.DisplayPeople"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CooperationApp"
        mc:Ignorable="d"
        Title="DisplayPeople" Height="450" Width="400"
        MinWidth="400" MaxWidth="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Content="Search: "/>
            <TextBox x:Name="searchTextBox"
                     VerticalAlignment="Center"
                     Width="150"/>
            <Button x:Name="deletePersonButton"
                    VerticalAlignment="Center"
                    Content="Delete"
                    Margin="10 0 0 0"
                    Click="deletePersonButton_Click"/>
            <Button x:Name="editPersonButton"
                    VerticalAlignment="Center"
                    Content="Edit"
                    Margin="10 0 0 0"/>
        </StackPanel>

        <ListView x:Name="personListView"
                  Background="GhostWhite"
                  Grid.Row="1">
            
        </ListView>
    </Grid>
</Window>
