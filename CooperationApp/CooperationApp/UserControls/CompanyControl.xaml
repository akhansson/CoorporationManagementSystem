<UserControl x:Class="CooperationApp.UserControls.CompanyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CooperationApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">

    <Grid Background="{StaticResource gridColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Background="{StaticResource headerBackgroundColor}"
               Content="Create Company"
               HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Center"
               FontSize="20"/>
        <Label Background="{StaticResource headerBackgroundColor}"
               Content="Employees"
               HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Center"
               FontSize="20"
               Grid.Column="1"/>

        <Grid Background="{StaticResource headerBackgroundColor}"
              Grid.Row="1"
              Grid.ColumnSpan="2">
        </Grid>

        <StackPanel Background="Transparent"
                    Orientation="Horizontal"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Center">

            <ComboBox x:Name="companyPickerComboBox"
                      VerticalAlignment="Center"
                      Width="200"
                      ItemsSource="{Binding Company}"
                      SelectedValue="{Binding CompanyName, Mode=TwoWay}"
                      DisplayMemberPath="CompanyName"
                      SelectionChanged="companyPickerComboBox_SelectionChanged"/>
            <Button x:Name="employButton"
                    Content="Change"
                    Width="80"
                    Height="20"
                    Margin="10 5"
                    IsEnabled="False"/>
        </StackPanel>




        <StackPanel Orientation="Vertical"
                    Grid.Row="2"
                    Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0"
                       Grid.Row="0"
                       Content="Company name: "/>
                <TextBox x:Name="companyNameTexbox"
                         Grid.Column="1"
                         Grid.Row="0"/>

                <Button x:Name="saveCompanyButton"
                        Content="Add"
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        Click="saveCompanyButton_Click"/>

                <Button x:Name="showCompaniesButton"
                        Content="Show Companies"
                        Grid.Column="1"
                        Grid.Row="2"
                        HorizontalAlignment="Stretch"
                        Click="showCompaniesButton_Click">
                </Button>

                <Label x:Name="companyAmountLabel"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="3"
                       FontWeight="Bold"/>
            </Grid>
        </StackPanel>

        <ListView x:Name="employeeListView"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Grid.Column="1"
                  Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"
                                    Width="auto">

                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
